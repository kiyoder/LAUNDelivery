<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imgLogoHome"
        android:layout_width="265dp"
        android:layout_height="246dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="470dp"
        android:layout_height="753dp"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoHome"
        app:srcCompat="@drawable/bubbles"
        tools:layout_editor_absoluteX="-30dp" />

    <Button
        android:id="@+id/btnLoginHome"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/deep_sky_blue"
        android:padding="12dp"
        android:text="Login"
        android:textSize="18sp"
        android:fontFamily="@font/baloo_bhaijaan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoHome" />

    <Button
        android:id="@+id/btnSignupHome"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/deep_sky_blue"
        android:padding="12dp"
        android:text="Signup"
        android:fontFamily="@font/baloo_bhaijaan"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginHome" />

</androidx.constraintlayout.widget.ConstraintLayout>